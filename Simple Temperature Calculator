while True:
    print("\nSimple Temperature Calculator: ")
    print("=============================\n")
    print("1. Celcius to Fahrenheit")
    print("2. Fahrenheit to Celcius")
    print("3. Celcius to Kelvin")
    print("4. Type to Exit")
    
    userChoiceInput = input("\nWhat is your choice: ")
    if int(userChoiceInput) == 1: 
        userInput = float(input("Enter temperature in Celsius: "))
        Fahrenheit = userInput * 9/5 + 32
        print(f"{userInput}°C is equal to {Fahrenheit}°F")
        

    elif int(userChoiceInput) == 2:
        userInput = float(input("Enter temperature in Fahrenheit: "))
        Celsius = (userInput - 32) * 5/9
        print(f"{userInput}°C is equal to {Celsius}°C")

    elif int(userChoiceInput) == 3:
        userInput = float(input("Enter temperature in Celsius: "))
        Kelvin = userInput + 273.15
        print(f"{userInput}°C is equal to {Kelvin} K")
       
    elif int(userChoiceInput) == 4:
        print("Exiting...")
        break
    
    option = str(input("Do you want to try again? yes or no: "))
    if option == "yes":
        continue
    elif option == "no":
            print("Exiting...")
            break
    else: 
        print("Invalid Input pls try again...")    

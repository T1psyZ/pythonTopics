print("Simple Calculator")
print("Select Operation: \n1. Addition (+) \n2. Subtraction (–) \n3. Multiplication (×) \n4. Division (÷)\n5. Modulus (%)\n6. Exponentiation (**)")
choices = input("Enter your choice [1-6]: ")

if choices == "1": #Addition
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    print(str(firstNumber) + " + " + str(secondNumber) + " = " + str(firstNumber + secondNumber))
elif choices == "2":#Subtraction
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    print(str(firstNumber) + " - " + str(secondNumber) + " = " + str(firstNumber - secondNumber))
elif choices == "3":#Multiplication
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    print(str(firstNumber) + " * " + str(secondNumber) + " = " + str(firstNumber * secondNumber))
elif choices == "4":#Division
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    if secondNumber >= 1:
        print(str(firstNumber) + " / " + str(secondNumber) + " = " + str(firstNumber / secondNumber))
    elif secondNumber == 0:
        print("Error: Division by zero is not allowed.")
    else:
        print("Invalid pls try again")
elif choices == "5":#Modulus
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    if secondNumber >= 1:
        print(str(firstNumber) + " % " + str(secondNumber) + " = " + str(firstNumber % secondNumber))
    elif secondNumber == 0:
        print("Error: Division by zero is not allowed.")
    else:
        print("Invalid pls try again")
elif choices == "6":#Exponentiation
    firstNumber = float(input("Enter First Number: "))
    secondNumber = float(input("Enter Second Number: "))
    print(str(firstNumber) + " ** " + str(secondNumber) + " = " + str(firstNumber ** secondNumber))
else:
    print("Incorrect Input please try again.")

movieLists = ["Spider-Man", "Chainsaw-Man", "Frozen", "Dark Night", "Lion King", "Sponge Bob", "Wicked"]
print("Movie List Manager")
print("1 - View a Movie \n2 - Update a Movie \n3 - Add a new Movie\n4 - Remove a Movie")

userChoiceInput = input("Enter your choice [1 - 4]: ")

#VIEW
if int(userChoiceInput) == 1:
    positionInput = input("Enter a movie number (0 - 6): ")
    if int(positionInput) < len(movieLists):
        print("Movie at position" + " " + str(positionInput) + " is " + str(movieLists[int(positionInput)]) + ".")
    else:
        print("Invalid Input please try agian.")
    print("\nUpdated Movie List: " + str(movieLists))
    
#UPDATE
elif int(userChoiceInput) == 2:
    updatePosition = input("Enter a movie number (0 - 6): ")
    if int(updatePosition) < len(movieLists):
        newUpdatedItem = input("Enter the new movie title: ")
        print("Movie updated successfully!")
        movieLists[int(updatePosition)] = newUpdatedItem
        print("\nUpdated Movie List: " + str(movieLists))
    else:
        print("Invalid Input please try agian.")

#ADD
elif int(userChoiceInput) == 3:
    addMovieInput = input("Enter the name of the new movie: ")
    movieLists.append(addMovieInput)
    print("Movie added successfully!")
    print("\nUpdated Movie List: " + str(movieLists))
    
#REMOVE
elif int(userChoiceInput) == 4:
    removeMovieInput = int(input("Enter movie number to remove (0 - 6): "))
    movieLists.pop(removeMovieInput)
    print("Movie removed successfully!")
    print("\nUpdated Movie List: " + str(movieLists))

#View all movie list 
"""elif int(userChoiceInput) == 5:
        print(movieLists)"""

else:
    print("Invalid Input please try agian.")

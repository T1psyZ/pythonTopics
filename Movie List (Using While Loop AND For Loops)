movieLists = []
    
print("Movie List Manager")

while True:
    print("View a movie [1]")
    print("Add a movie [2]")
    print("Type [0] to Exit")
    userChoiceInput = input("Enter your choice [1 - 2]: ")
#VIEW A MOVIE
    if userChoiceInput == '1': 
        if len(movieLists) == 0:
            print("U dont have a movie yet.")
        else:
            i = 0  
            for listMovies in movieLists: 
                i = i + 1 
                print(i, listMovies)

#ADD A MOVIE        
    elif userChoiceInput == '2':
        addMovieInput = input("Enter the name of the new movie: ")
        movieLists.append(addMovieInput) 
        print("Movie added successfully!\n")

    elif userChoiceInput == '0':
        print("Goodbye!")
        break
    else:
        print("Invalid Input pls try again (Only 1 and 2 or 0)")



        
